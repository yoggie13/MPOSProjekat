<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_x="0dp"
        android:layout_y="0dp">

        <TextView
            android:id="@+id/txtEnter"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginTop="176dp"
            android:gravity="center"
            android:text="Molimo vas unesite IP adresu raÄunara"
            android:textSize="22sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtIP"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:ems="10"
            android:gravity="center"
            android:hint="IP adresa"
            android:inputType="text"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/btnConnect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="140dp"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            android:onClick="connect"
            android:text="Connect"
            app:backgroundTint="#009688"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="139dp"
            android:layout_height="52dp"
            android:onClick="disconnect"
            android:text="Disconnect"
            app:backgroundTint="#2B2A2A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInfo"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="230dp"
            android:layout_height="76dp"
            android:layout_marginTop="176dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="306dp"
            android:layout_height="149dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/txtInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/goodluck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="419dp"
        android:layout_marginHorizontal="10dp"
        android:layout_x="0dp"
        android:layout_y="317dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="6dp"
            android:text="Previous"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#F44336" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="6dp"
            android:text="next"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#009688" />

    </LinearLayout>

</AbsoluteLayout>